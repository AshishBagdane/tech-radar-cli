# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Rust files
[*.rs]
indent_style = space
indent_size = 4
max_line_length = 100
curly_bracket_next_line = false
spaces_around_operators = true
spaces_around_brackets = false
indent_brace_style = K&R

# TOML files
[*.toml]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2
max_line_length = 80

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Documentation files
[docs/**/*.md]
max_line_length = 80
indent_size = 2

# Test files
[tests/**/*.rs]
indent_size = 4
max_line_length = 100

# Generated files (don't edit)
[*.{generated,gen}.rs]
generated_code = true
